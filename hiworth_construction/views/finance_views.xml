								<field name="loan_account_id" required="1" attrs="{'readonly':[('state','!=', 'draft')]}"/>
							</group>
							<group>
								<field name="vehicle_id" attrs="{'readonly':[('state','not in', ['draft','approved'])]}" required="1"/>
