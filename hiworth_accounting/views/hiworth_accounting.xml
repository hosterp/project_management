						<field name="residual" groups="account.group_account_user"
							class="oe_subtotal_footer_separator" widget="monetary"
							options="{'currency_field': 'currency_id'}" />
					</group>
				</xpath>
				<!-- <xpath expr="//notebook/page/field/tree/field[@name='product_id']" 
