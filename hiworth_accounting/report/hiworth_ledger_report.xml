                                        <th class="text-right" style="width: 11%">Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th class="text-left"></th>
                                       <!--  <th class="text-right">
                                        </th> -->
                                        <th class="text-left">
                                        <t t-esc="docs.narration"></t>

                                        </th>
                                        <th class="text-right">

