                                    </tr>
                                    <tr t-foreach="docs.get_account_move_lines()" t-as="l">
                                        <td>
                                            <!-- <t t-esc="o.date" /> -->
                                            <span t-esc="time.strftime('%d-%m-%Y',time.strptime(l.date,'%Y-%m-%d'))"/>

                                        </td>
                                       <!--  <td>
                                            <t t-esc="l.account_id.name" />
                                        </td> -->
                                        <td>
                                            <t t-esc="l.name" />
                                        </td>
                                        <td>
                                            <t t-esc="l.opp_acc" />
