                                      <!--   <td>
                                            <t t-esc="l.journal_id.name" />
                                        </td> -->
                                        <td class="text-right">
                                            <t t-esc="l.debit" />
                                            <t t-set="debit_total" t-value="debit_total+l.debit" />
                                            <t t-set="balance_total" t-value="balance_total+l.debit" />
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="l.credit" />
                                            <t t-set="credit_total" t-value="credit_total+l.credit" />
                                            <t t-set="balance_total" t-value="balance_total-l.credit" />
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="balance_total" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-left">Grand Total</th>
                                       <!--  <th class="text-right">
                                        </th> -->
                                        <th class="text-right">

                                        </th>
                                        <th class="text-right">

                                        </th>
                                        <!-- <th class="text-right">
                                        </th> -->
                                        <th class="text-right">
                                            <t t-esc="debit_total" />
                                        </th>
                                        <th class="text-right">
                                            <t t-esc="credit_total" />
                                        </th>
                                        <th class="text-right">
                                            <t t-esc="balance_total" />
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>





	</data>
</openerp>
